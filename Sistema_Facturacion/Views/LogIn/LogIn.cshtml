                            </div>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "clave", @class = "form-control", @placeholder="Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center">
                            <input id="LogIn" type="button" value="LogIn" class="btn btn-primary text-center" />
                        </div>
                    </form>
                </div>

