@model Sistema_Facturacion.Models.ViewModel.MUsuarioViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Usuario";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                <fieldset>
                    <legend class="text-center header">Editar Usuario</legend>


                    <div class="form-group ">

                        <div class="col-md-9 col-xs-offset-3 ">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control " } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-9 col-xs-offset-3">
                            @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "form-label " })
                            @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-9 col-xs-offset-3">
                            @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-9 col-xs-offset-3">
                            @Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-9 col-xs-offset-3">

                            @Html.LabelFor(model => model.idTipoUsuarioSelected, htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.idTipoUsuarioSelected, Model.tipoUsuarioSelect, " Seleccionar Tipo Usuario", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idTipoUsuarioSelected, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="text-center">

                        <button type="submit" class="btn btn-primary "> <span class=" bi bi-save"></span> Guardar</button>
                    </div>


                </fieldset>
            </div>

        </div>

    </div>

}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
